<h2 class="bg_sunflower">ログイン</h2>
<div class="contents registration-block">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field"><div class="form">
   <dl>
<dt class="form-title"><%= f.label :メールアドレス %><dt>
    <dd class="form-item"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></dd></dl>
  </div>
    </div>
	  
   <div class="field"><div class="form">
   <dl>
<dt class="form-title"><%= f.label :パスワード %><dt>
   <dd class="form-item"> <%= f.password_field :password, autocomplete: "current-password" %></dd></dl>
  </div>
    </div>

	   <% if devise_mapping.rememberable? %>
  <div class="field"><div class="form">
   <dl>
<%= f.check_box :remember_me %>
      <dd class="form-item"><%= f.label :パスワードをお忘れの方はこちら %></dd></dl>
    </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
